<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/movie_details_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="I am a Movie" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/movie_details_poster"
            android:layout_width="187dp"
            android:layout_height="277dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_sort_white_24dp" />

        <TextView
            android:id="@+id/movie_details_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/movie_details_poster"
            android:layout_marginEnd="54dp"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="10/12/2014"
            android:layout_alignParentRight="true"
            android:layout_marginRight="54dp" />

        <TextView
            android:id="@+id/movie_details_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="94dp"
            android:paddingBottom="8dp"
            android:text="6.8 / 10 (1245 votes)"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/movie_details_overview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Lorem ipsum ipsum ipsum ipsum ipsum ipsum ipsum ipsum ipsum ipsum ipsum ipsum ipsum ipsum" />

</LinearLayout>